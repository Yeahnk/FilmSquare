<%@page import="movie.vo.PosterVO"%>
<%@page import="movie.service.PosterServiceImpl"%>
<%@page import="movie.service.IPosterService"%>
<%@page import="movie.service.MovieInfoServiceImpl"%>
<%@page import="movie.service.IMovieInfoService"%>
<%@page import="java.util.List"%>
<%@page import="movie.vo.MovieInfoVO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="globals.css" />
    <link rel="stylesheet" href="styleguide.css" />
    <link rel="stylesheet" href="style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet">
  </head>
  <%
  IMovieInfoService movieService = MovieInfoServiceImpl.getInstance();
  IPosterService posterService = PosterServiceImpl.getInstance();
  %>
  <body>
    <div class="frame">
      <div class="navbar">
        <div class="text-wrapper">FILM SQUARE</div>
        <div class="text-wrapper">CALENDAR</div>
        <div class="text-wrapper">MAP</div>
        <div class="text-wrapper">SEARCH</div>
        <div class="text-wrapper">JOIN</div>
        <div class="text-wrapper">LOG IN</div>
      </div>
      <div class="main-image-wrapper">
        <div class="main-image" style="background-image: url(./images/design/lalalend.jpg)"><div class="div">FILM SQUARE</div></div>
      </div>
      <div class="box-office">
      <div class="overlap-group">
        <div class="BOX-OFFICE">BOX <br />OFFICE</div>
        <div class="div-2">
        <%
        	List<MovieInfoVO> movieList = movieService.getBoxOffice();
        	for(int i=0; i<5; i++){
        		MovieInfoVO aMovie = movieList.get(i); 	
        		PosterVO poster = posterService.getPosterByMvId(aMovie.getMvId());
        %>
          <a href="#영화상세 링크#" class="div-3" style="background-image: url(<%=poster.getPosterImg()%>)"></a>
        <%
        	}        
        %>
        </div>
      </div>
    </div>
    </div>
  </body>
</html>

<style>
:root {
  --primary: rgba(231, 29, 29, 1);
  --black: rgba(0, 0, 0, 1);
  --white: rgba(255, 255, 255, 1);
  --star: rgba(241, 197, 40, 1);
  --body-regular-font-family: "RopaSans-Regular", Helvetica;
  --body-regular-font-weight: 400;
  --body-regular-font-size: 16px;
  --body-regular-letter-spacing: 0px;
  --body-regular-line-height: 150%;
  --body-regular-font-style: normal;
  --poster-mini-shadow: 4px 4px 4px 0px rgba(196, 196, 196, 0.5), -4px -3px 4px 0px rgba(196, 196, 196, 0.2),
    4px -2px 4px 0px rgba(196, 196, 196, 0.2);
}

.frame {
  flex-direction: column;
  align-items: center;
  background-color: var(--black);
  display: flex;
  position: relative;
}

.frame .navbar {
  align-items: flex-start;
  justify-content: space-between;
  padding: 13px 20px;
  align-self: auto;
  width: 100%;
  flex: 0 0 auto;
  display: flex;
  position: relative;
}

.frame .text-wrapper {
  position: relative;
  width: fit-content;
  margin-top: -1px;
  font-family: "Actor-Regular", Helvetica;
  font-weight: 400;
  color: var(--white);
  font-size: 33px;
  letter-spacing: 0;
  line-height: 33px;
  white-space: nowrap;
}

.frame .main-image-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0px 20px 16px;
  position: relative;
  align-self: stretch;
  width: 100%;
  flex: 0 0 auto;
}

.frame .main-image {
  display: flex;
  height: 1021px;
  align-items: flex-start;
  justify-content: center;
  padding: 13px 16px;
  position: relative;
  align-self: stretch;
  width: 100%;
  background-size: cover;
  background-position: 50% 50%;
}

.frame .div {
  position: relative;
  width: fit-content;
  margin-top: -1px;
  font-family: 'Abril Fatface', serif;
  font-weight: 400;
  color: #ffffff;
  font-size: 281px;
  letter-spacing: 0;
  line-height: 224.8px;
  white-space: nowrap;
}

.frame .box-office {
  position: relative;
  align-self: stretch;
  width: 100%;
  height: 1021px;
  background-color: #ffffff;
  overflow: hidden;
}

.frame .overlap-group {
  position: relative;
  align-self: stretch;
  width: 100%;
  height: 1021px;
  background-color: #ffffff;
  overflow: hidden;
}

.frame .BOX-OFFICE {
  position: absolute;
  top: 0;
  left: 130px;
  font-family: "Abril Fatface-Regular", Helvetica;
  font-weight: 400;
  color: var(--black);
  font-size: 228px;
  letter-spacing: 0;
  line-height: 182.4px;
}

.frame .div-2 {
  display: flex;
  width: 2099px;
  align-items: center;
  gap: 32px;
  padding: 32px 200px;
  position: absolute;
  top: 360px;
  left: -67px;
  background-color: var(--black);
  transform: rotate(-8.3deg);
}

.frame .div-3 {
  position: relative;
  width: 348px;
  height: 501px;
  background-size: cover;
  background-position: 50% 50%;
}


</style>